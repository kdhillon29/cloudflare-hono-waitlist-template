{
  "name": "cloudflare-hono-waitlist-template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "client": "bun run --bun astro dev",
    "build:client": "bun run --bun astro build",
    "preview": " astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint 'src/**/*.{js,ts,tsx,astro}'",
    "worker": "wrangler dev",
    "dev": "concurrently \"bun run client\" \"bun run worker\"",
    "dryrun:staging": "bun run build:client && wrangler deploy --dry-run --env staging",
    "dryrun:prod": "bun run build:client && wrangler deploy --dry-run --env production",
    "deploy:staging": "bun run build:client && wrangler deploy --env staging",
    "deploy:prod": "bun run build:client && wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply expenso_local_db --local",
    "db:migrate:staging": "wrangler d1 migrations apply expenso_staging_db --remote --env staging",
    "db:migrate:prod": "wrangler d1 migrations apply expenso_db --remote --env production",
    "create:test:db": "bun run ./scripts/create-test-db.ts",
    "destory:test:db": "bun run ./scripts/destroy-test-db.ts",
    "test": "bun run create:test:db && bun test && bun run destory:test:db"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@hono/zod-validator": "^0.7.6",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.54.0",
    "astro": "^5.17.1",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "hono": "^4.11.7",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "react": "^19.2.4",
    "react-countup": "^6.5.3",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "wrangler": "^4.61.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260203.0",
    "@types/bun": "^1.3.8",
    "daisyui": "^5.5.16",
    "drizzle-kit": "^0.31.8",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
